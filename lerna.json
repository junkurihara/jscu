{
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        "*.txt",
        "**/test/**",
        "**/coverage/**",
        "**/dist/**",
        "**/.nyc_output/**",
        "**/node_modules/**"
      ]
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-lockfile"]
    }
  },
  "packages": ["packages/*"]
}
